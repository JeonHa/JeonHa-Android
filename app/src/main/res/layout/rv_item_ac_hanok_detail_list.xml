<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="116dp"
        android:layout_height="98dp"
        android:paddingRight="10dp">

    
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/grey_stroke_round"/>

    <LinearLayout
            android:id="@+id/li_ac_hanok_detail_room_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tv_ac_hanok_detail_room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#2e394a"
                android:layout_marginTop="10dp"
                android:text="싱글룸"/>


        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp">


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"

                    android:textColor="#868e96"
                    android:text="객실수 "/>



            <TextView
                    android:id="@+id/tv_ac_hanok_detail_room_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#2e394a"
                    android:layout_alignParentRight="true"
                    android:text="3" />



        </RelativeLayout>


        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp">


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#868e96"
                    android:text="수용인원 "/>



            <TextView
                    android:id="@+id/tv_ac_hanok_detail_room_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#2e394a"
                    android:layout_alignParentRight="true"
                    android:text="3" />



        </RelativeLayout>


    </LinearLayout>







</RelativeLayout>