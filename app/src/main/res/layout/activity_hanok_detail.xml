<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.Hanok.HanokDetailActivity">


    <android.support.v4.widget.NestedScrollView
            android:id="@+id/sv_ac_hanok_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.v4.view.ViewPager
                    android:id="@+id/vp_main_slider"
                    android:layout_width="match_parent"
                    android:layout_height="229dp"
                    android:background="#f4f4f4"/>
            <android.support.design.widget.TabLayout
                    android:id="@+id/tl_main_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    app:tabIndicatorHeight="0dp"
                    app:tabGravity="center"
                    app:tabBackground="@drawable/dot_selector"
                    >
            </android.support.design.widget.TabLayout>

            <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:src="@drawable/back_whtie"/>


        </RelativeLayout>




            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/tv_ac_hanok_detail_"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#2e394a"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/noto_sans_cjkkr_regular"
                            android:text="한옥체험업"/>
                    
                    <View
                            android:layout_width="1dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="9dp"
                            android:background="#ced4da"/>


                    <TextView
                            android:id="@+id/tv_detail_addres1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:fontFamily="@font/noto_sans_cjkkr_regular"
                            android:text="청계천 · 종로" />


                </LinearLayout>


                <TextView
                        android:id="@+id/tv_ac_hanok_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#2e394a"
                        android:fontFamily="@font/noto_sans_cjkkr_medium"
                        android:layout_marginTop="5dp"
                        android:text="누리한옥게스트하우스"/>


                <TextView
                        android:id="@+id/tv_ac_hanok_detail_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#868e96"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/noto_sans_cjkkr_regular"
                        android:text="서울시 종로구 체부동 147-1"/>


            </LinearLayout>


        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#ced4da"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical">


            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/info_icon"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/noto_sans_cjkkr_bold"
                        android:textColor="#444444"
                        android:text="상세 정보"/>


            </LinearLayout>


            <TextView
                    android:id="@+id/tv_ac_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="14dp"
                    android:textColor="#495057"
                    android:fontFamily="@font/noto_sans_cjkkr_regular"
                    android:text="" />


        </LinearLayout>


        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#ced4da"/>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">



            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="16dp">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/info_icon"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:fontFamily="@font/noto_sans_cjkkr_bold"
                        android:text="객실정보"/>


            </LinearLayout>


       <android.support.v7.widget.RecyclerView
               android:id="@+id/rv_ac_hanok_detail_room"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="16dp"/>


        </LinearLayout>


        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#ced4da"/>



        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical">



            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_marginTop="@dimen/space_2x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/info_icon"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#444444"
                        android:fontFamily="@font/noto_sans_cjkkr_bold"
                        android:text="오시는 길"/>

            </LinearLayout>

            <TextView
                    android:id="@+id/tv_hanok_ad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#868e96"
                    android:layout_marginTop="4dp"
                    android:text="서울시 종로구 체부동 147-1"/>

            <fragment
                    android:id="@+id/frag_detail_map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="178dp"
                    android:layout_marginVertical="12dp"
                    tools:context=".UI.Hanok.HanokDetailActivity" />


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#4a4a4a"
                    android:layout_marginTop="8dp"
                    android:text="대중교통"/>


            <TextView
                    android:id="@+id/tv_ha_tran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:textColor="#868e96"
                    android:text=""/>

        </LinearLayout>


    </LinearLayout>



    </android.support.v4.widget.NestedScrollView>




        <RelativeLayout
                android:id="@+id/rl_ac_hanok_detail_order"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#f4f2f2"
                android:layout_alignParentBottom="true">


            <ImageView
                    android:id="@+id/_ac_hanok_detail_order"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/red_round_fill"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="8dp"/>


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/noto_sans_cjkkr_bold"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:text="예약하시겠사옵니까?"/>



    </RelativeLayout>






</RelativeLayout>