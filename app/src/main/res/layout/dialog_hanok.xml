<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="280dp"
        android:layout_height="344dp"
        android:orientation="vertical">

    <TextView
            style="@style/Black87MediumFontStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="19dp"
            android:layout_marginLeft="16dp"
            android:text="지역을 선택해주세요."
            android:textSize="16sp" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RadioGroup
                    android:id="@+id/rg_dialog_hanok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checkedButton="@id/dialog_hanok_maphogu"
                    android:orientation="vertical">

                <RadioButton
                        android:id="@+id/dialog_hanok_maphogu"
                        style="@style/Black87RegularFontStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:paddingTop="9dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="26dp"
                        android:text="마포구" />

                <RadioButton
                        android:id="@+id/dialog_hanok_cityhall"
                        style="@style/Black87RegularFontStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:paddingTop="9dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="26dp"
                        android:text="시청" />

                <RadioButton
                        android:id="@+id/dialog_hanok_dongdaemoon"
                        style="@style/Black87RegularFontStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:paddingTop="9dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="26dp"
                        android:text="동대문" />

                <RadioButton
                        android:id="@+id/dialog_hanok_gangnam"
                        style="@style/Black87RegularFontStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:paddingTop="9dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="26dp"
                        android:text="강남" />

                <RadioButton
                        android:id="@+id/dialog_hanok_hongdae"
                        style="@style/Black87RegularFontStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:paddingTop="9dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="26dp"
                        android:text="신촌ㆍ홍대" />

                <RadioButton
                        android:id="@+id/dialog_hanok_gogung"
                        style="@style/Black87RegularFontStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:paddingTop="9dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="26dp"
                        android:text="고궁" />

                <RadioButton
                        android:id="@+id/dialog_hanok_yongsan"
                        style="@style/Black87RegularFontStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:paddingTop="9dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="26dp"
                        android:text="용산ㆍ여의도" />

                <RadioButton
                        android:id="@+id/dialog_hanok_jamsil"
                        style="@style/Black87RegularFontStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:paddingTop="9dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="26dp"
                        android:text="잠실" />

                <RadioButton
                        android:id="@+id/dialog_hanok_etc"
                        style="@style/Black87RegularFontStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:paddingTop="9dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="26dp"
                        android:text="그 외 지역" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/btn_dialog_hanok_cancel"
                style="@style/WhiteMediumFontStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/silver"
                android:gravity="center"
                android:text="취소"
                android:textSize="16sp" />

        <TextView
                android:id="@+id/btn_dialog_hanok_ok"
                style="@style/WhiteMediumFontStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/watermelon"
                android:gravity="center"
                android:text="확인"
                android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>