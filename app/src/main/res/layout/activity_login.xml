<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.Login.LoginActivity">


    <LinearLayout
            android:id="@+id/li_ac_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="237dp"
                android:layout_gravity="center_horizontal">

            <ImageView
                    android:id="@+id/img_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/jeon_ha_login" />
        </RelativeLayout>


        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="53dp">


            <LinearLayout
                    android:id="@+id/ll_ac_login_id_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/king" />

                <EditText
                        android:id="@+id/et_ac_login_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:background="@null"
                        android:fontFamily="@font/noto_sans_cjkkr_regular"
                        android:hint="아이디"
                        android:text="jeonha"
                        android:textColorHint="#CECECE" />

            </LinearLayout>


            <View
                    android:id="@+id/v_login_id"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ll_ac_login_id_space"
                    android:layout_marginTop="9dp"
                    android:background="#474747" />


        </RelativeLayout>


        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="53dp"
                android:layout_marginTop="18dp">


            <LinearLayout
                    android:id="@+id/ll_ac_login_pw_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/naeshi" />

                <EditText
                        android:id="@+id/et_ac_login_pw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:background="@null"
                        android:fontFamily="@font/noto_sans_cjkkr_regular"
                        android:hint="비밀번호"
                        android:inputType="textPassword"
                        android:text="1234"
                        android:textColorHint="#CECECE" />

            </LinearLayout>


            <View
                    android:id="@+id/v_login_pw"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ll_ac_login_pw_space"
                    android:layout_marginTop="9dp"
                    android:background="#474747" />


        </RelativeLayout>


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_marginHorizontal="53dp">


            <RelativeLayout
                    android:id="@+id/btn_ac_login_signin"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_above="@id/btn_ac_login_signup"
                    android:background="@drawable/red_round_fill">


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/noto_sans_cjkkr_regular"
                        android:text="로그인"
                        android:textColor="#ffffff" />


            </RelativeLayout>


            <RelativeLayout
                    android:id="@+id/btn_ac_login_signup"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/black_round_fill">


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/noto_sans_cjkkr_regular"
                        android:text="회원가입"
                        android:textColor="#ffffff" />

            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>

    <TextView
            android:id="@+id/tv_ac_login_forget_idpw"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_below="@+id/li_ac_login"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/noto_sans_cjkkr_regular"
            android:text="@string/forgetIDPW"
            android:textColor="#868e96"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/li_ac_login"
            app:layout_constraintVertical_bias="0.921" />


</android.support.constraint.ConstraintLayout>