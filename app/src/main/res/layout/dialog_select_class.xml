<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="280dp"
              android:layout_height="344dp"
              android:orientation="vertical">
    <RelativeLayout
            android:paddingStart="16dp"
            android:layout_width="match_parent" android:layout_height="68dp">
        <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#de000000"
                android:fontFamily="@font/noto_sans_cjkkr_medium"
                android:includeFontPadding="false"
                android:lineSpacingExtra="12sp"
                android:text="요일을 선택해주세요."
        />
    </RelativeLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="224dp" android:scrollbars="none">
        <LinearLayout
                android:paddingStart="16dp"
                android:layout_width="match_parent" android:layout_height="224dp"
                      android:orientation="vertical">

            <RelativeLayout
                    android:id="@+id/rl_select_class_dialog_monday"
                    android:layout_width="match_parent" android:layout_height="48dp">
                <RadioButton
                        android:id="@+id/rb_select_class_dialog_monday"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginStart="16dp"
                        android:layout_toRightOf="@+id/rb_select_class_dialog_monday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/noto_sans_cjkkr_regular"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="8sp"
                        android:text="월요일"
                        android:textColor="#de000000"
                        android:textSize="16sp"
                />
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rl_select_class_dialog_tuesday"
                    android:layout_width="match_parent" android:layout_height="48dp">
                <RadioButton
                        android:id="@+id/rb_select_class_dialog_tuesday"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginStart="16dp"
                        android:layout_toRightOf="@+id/rb_select_class_dialog_tuesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/noto_sans_cjkkr_regular"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="8sp"
                        android:text="화요일"
                        android:textColor="#de000000"
                        android:textSize="16sp"
                />
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rl_select_class_dialog_wednesday"
                    android:layout_width="match_parent" android:layout_height="48dp">
                <RadioButton
                        android:id="@+id/rb_select_class_dialog_wednesday"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginStart="16dp"
                        android:layout_toRightOf="@+id/rb_select_class_dialog_wednesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/noto_sans_cjkkr_regular"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="8sp"
                        android:text="수요일"
                        android:textColor="#de000000"
                        android:textSize="16sp"
                />
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rl_select_class_dialog_thursday"
                    android:layout_width="match_parent" android:layout_height="48dp">
                <RadioButton
                        android:id="@+id/rb_select_class_dialog_thursday"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginStart="16dp"
                        android:layout_toRightOf="@+id/rb_select_class_dialog_thursday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/noto_sans_cjkkr_regular"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="8sp"
                        android:text="목요일"
                        android:textColor="#de000000"
                        android:textSize="16sp"
                />
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rl_select_class_dialog_friday"
                    android:layout_width="match_parent" android:layout_height="48dp">
                <RadioButton
                        android:id="@+id/rb_select_class_dialog_friday"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginStart="16dp"
                        android:layout_toRightOf="@+id/rb_select_class_dialog_friday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/noto_sans_cjkkr_regular"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="8sp"
                        android:text="금요일"
                        android:textColor="#de000000"
                        android:textSize="16sp"
                />
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rl_select_class_dialog_saturday"
                    android:layout_width="match_parent" android:layout_height="48dp">
                <RadioButton
                        android:id="@+id/rb_select_class_dialog_saturday"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginStart="16dp"
                        android:layout_toRightOf="@+id/rb_select_class_dialog_saturday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/noto_sans_cjkkr_regular"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="8sp"
                        android:text="토요일"
                        android:textColor="#de000000"
                        android:textSize="16sp"
                />
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rl_select_class_dialog_sunday"
                    android:layout_width="match_parent" android:layout_height="48dp">
                <RadioButton
                        android:id="@+id/rb_select_class_dialog_sunday"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginStart="16dp"
                        android:layout_toRightOf="@+id/rb_select_class_dialog_sunday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/noto_sans_cjkkr_regular"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="8sp"
                        android:text="일요일"
                        android:textColor="#de000000"
                        android:textSize="16sp"
                />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


    <LinearLayout android:layout_width="match_parent" android:layout_height="52dp"
                  android:orientation="horizontal">
        <TextView
                android:id="@+id/tv_select_class_dialog_quit_btn"
                android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:background="#ced4da"
                  android:fontFamily="@font/noto_sans_cjkkr_medium"
                  android:gravity="center"
                  android:includeFontPadding="false"
                  android:letterSpacing="0.03"
                  android:text="취소"
                  android:textColor="#ffffff"
                  android:textSize="16sp"

        />
        <TextView
                android:id="@+id/tv_select_class_dialog_submit_btn"
                android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:background="@color/watermelon"
                  android:fontFamily="@font/noto_sans_cjkkr_medium"
                  android:gravity="center"
                  android:includeFontPadding="false"
                  android:letterSpacing="0.03"
                  android:text="확인"
                  android:textColor="#ffffff"
                  android:textSize="16sp"

        />
    </LinearLayout>

</LinearLayout>