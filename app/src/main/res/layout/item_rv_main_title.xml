<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rv_item_main_title_container"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent" android:layout_height="380dp">
    <ImageView
            android:id="@+id/iv_item_main_title_image"
            android:scaleType="fitXY"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:src="@color/dark"/>

    <TextView
            android:id="@+id/tv_item_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/noto_sans_cjkkr_medium"
            android:includeFontPadding="false"
            android:text="Title"
            android:textColor="#ffffff"
            android:textSize="20sp"/>
</RelativeLayout>